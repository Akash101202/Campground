<% layout('layouts/boilerplate')%>
   <div class="container mt-4">
        <h1>Search Results for "<%= searchQuery %>"</h1>
        <% for (let campground of campgrounds){%>
            <div class="card ml-3 mb-3 mt-4" style="width: 18rem;">
                <%if(campground.images.length) {%>
                    <img class="img-fluid mt-3" alt="" src="<%=campground.images[0].url%>">
                    <% }else {%>
                    <img class="img-fluid" alt=""
                        src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                    <% } %>
                <div class="card-body">
                  <h5 class="card-title"><%= campground.title %> </h5>
                  <p class="card-text"><%=campground.description %></p>
                  <a class="btn" href="/campgrounds/<%=campground._id%>"><span style="color: white">View <%=campground.title%></span></a>
                </div>
              </div>
             
            <% } else { %>
                <div class="col-12">
                    <p>No campgrounds found matching your search criteria.</p>
                </div>
            <% } %>
        </div>
    </div>
