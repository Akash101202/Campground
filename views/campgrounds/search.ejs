<% layout('layouts/boilerplate')%>
   <div class="container mt-4">
        <h1>Search Results for "<%= searchQuery %>"</h1>
        <div class="row">
            <% if (campgrounds.length > 0) { %>
                <% campgrounds.forEach(campground => { %>
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.title %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= campground.title %></h5>
                                <p class="card-text"><%= campground.location %></p>
                                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12">
                    <p>No campgrounds found matching your search criteria.</p>
                </div>
            <% } %>
        </div>
    </div>
