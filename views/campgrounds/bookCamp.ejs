<% layout('layouts/boilerplate')%>

<center><h1>Welcome to booking page</h1></center>
<div id="campgroundCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <% campground.images.forEach((img, i) => {  %>
        <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
            <img src="<%= img.url%>" class="d-block w-100 img-thumbnail mb-2" alt="">
        </div>
        <% }) %>
    </div>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title%></h5>
                <p class="card-text"><%= campground.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= campground.location%></li>
                <li class="list-group-item">â‚¹<%= campground.price%>/night</li>
                <a href="/campgrounds/<%= campground._id %>/bookCamp" class="btn btn-primary" id="book">Book This Camp</a>
            </div>
